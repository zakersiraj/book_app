<% provide(:title, 'Add Book') %>
<h1>Add Book</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= form_for(@book) do |f| %>

      <%= render 'shared/error_messages_books' %>
      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.submit "Add a Book", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
