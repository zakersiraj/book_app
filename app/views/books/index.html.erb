<% provide(:title, 'All books') %>
<h1>List of Books</h1>
<div class="table-responsive"> 
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Author</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %> 
        <tr>
          <td><%= book.id %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  
